<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12.7dp"
        android:layout_marginLeft="11.7dp"
        android:layout_marginRight="11.7dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/blue" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginRight="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="11.7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/addresstype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/walkthrough_txt"
                android:textSize="18.3sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Home"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/walkthrough_txt"
                android:textSize="18.3sp"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Home"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:layout_marginTop="5dp"
                android:textSize="13.3sp"
                android:textColor="@color/walkthrough_txt"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/userid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:textSize="13.3sp"
                android:textColor="@color/walkthrough_txt"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:id="@+id/mobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:textSize="13.3sp"
                android:textColor="@color/walkthrough_txt"
                android:fontFamily="@font/roboto_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addressid"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/street"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S 02 indialbulls  "
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/locality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="IndiraNagar"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:fontFamily="@font/roboto_regular"/>

            </LinearLayout>

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lucknow"
                android:textSize="13.3sp"
                android:textColor="#8f909e"
                android:fontFamily="@font/roboto_regular"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/close"
                android:paddingTop="5dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/ic_delete_black_24dp"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="5dp"/>




        </LinearLayout>


    </LinearLayout>


</LinearLayout>