<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#f5f7f8"
    android:elevation="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#212224">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:fontFamily="@font/roboto_medium"
                android:text="Apply Coupon"/>

            <ImageView
                android:id="@+id/closebtn"
                android:layout_width="25dp"
                android:layout_gravity="right"
                android:src="@drawable/ic_close_24dp"
                android:layout_marginRight="10dp"
                android:layout_height="25dp" />

        </androidx.appcompat.widget.Toolbar>

        <EditText
            android:id="@+id/couponcode"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:hint="Enter Coupon Here..."
            android:background="@color/white"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_green_dark"
            android:textColorHint="#8f909e"
            android:textSize="14sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclercoupon"
            android:scrollbars="vertical"
            android:layout_marginRight="2.5dp"
            android:layout_marginLeft="2.4dp"
            android:layout_height="200dp">

        </androidx.recyclerview.widget.RecyclerView>



        <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/buttonapply"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/gradient_btn"
                android:layout_marginBottom="11.7dp"
                android:text="Apply Coupon"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="15.7sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>