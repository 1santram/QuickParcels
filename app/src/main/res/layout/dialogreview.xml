<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/close_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:src="@drawable/ic_close_24dp"/>

    <LinearLayout
        android:layout_below="@id/close_img"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:text="Write Feedback"
        android:textColor="@color/toolbartxtcolor"
        android:textSize="22sp"
        android:textStyle="bold" />

    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:outlineSpotShadowColor="@color/black"
        android:outlineAmbientShadowColor="@color/toolbartxtcolor"
        android:layout_margin="8dp"
        android:isIndicator="false"
        android:numStars="5" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:hint="write review.."
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:layout_marginRight="8dp"
        android:textCursorDrawable="@drawable/cursor"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient_rect"
        android:gravity="center"
        android:inputType="textMultiLine"
        android:minHeight="50dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/submit_feedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18.3sp"
        android:textAllCaps="false"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/gradient_btn"
        android:text="submit"
        android:textColor="@android:color/white" />

    </LinearLayout>
</RelativeLayout>