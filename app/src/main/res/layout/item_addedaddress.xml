<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="14.8"
                android:gravity="center"
                android:paddingLeft="5dp"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/radio"
                    android:fontFamily="@font/roboto_regular"
                    android:buttonTint="@color/toolbartxtcolor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/view_line"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_margin="5dp"
                android:layout_weight="71"
                android:paddingLeft="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/addresstype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/walkthrough_txt"
                    android:textSize="18.3sp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Home"/>



                <TextView
                    android:id="@+id/addressid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/walkthrough_txt"
                    android:textSize="18.3sp"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_medium"
                    android:text=""/>

                <TextView
                    android:id="@+id/pincode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textSize="13.3sp"
                    android:textColor="@color/walkthrough_txt"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/nearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textSize="13.3sp"
                    android:textColor="@color/walkthrough_txt"
                    android:fontFamily="@font/roboto_regular"/>


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:layout_marginTop="5dp"
                    android:textSize="13.3sp"
                    android:textColor="@color/walkthrough_txt"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Doe"
                    android:visibility="gone"
                    android:layout_marginTop="5dp"
                    android:textSize="13.3sp"
                    android:textColor="@color/walkthrough_txt"
                    android:fontFamily="@font/roboto_regular"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/flat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="S 02 indialbulls  "
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:fontFamily="@font/roboto_regular"/>
                    <TextView
                        android:id="@+id/street"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="IndiraNagar"
                        android:textSize="13.3sp"
                        android:textColor="#8f909e"
                        android:fontFamily="@font/roboto_regular"/>



                </LinearLayout>

                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lucknow"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:fontFamily="@font/roboto_regular"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="IndiraNagar"
                    android:textSize="13.3sp"
                    android:textColor="#8f909e"
                    android:fontFamily="@font/roboto_regular"/>


            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@color/view_line"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="13.8"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="3"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1.3"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".1"/>

                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="13dp"
                    android:src="@drawable/ic_edit_black_24dp"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1.3"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>