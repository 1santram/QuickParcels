<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".OrderPlace">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar_orderplace"
            android:id="@+id/title"/>

    </androidx.cardview.widget.CardView>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@id/tool"
        android:orientation="vertical"
        android:layout_above="@id/above"
        android:paddingTop="12.7dp"
        android:layout_height="match_parent">

    <ScrollView

        android:layout_width="match_parent"
        android:nestedScrollingEnabled="true"
        android:scrollbars="none"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

      <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="12.7dp"
        android:layout_marginBottom="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="100"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:text="Pickup location :"
                android:textSize="15.5sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>
            <TextView
                android:id="@+id/pickuplocation"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:text=" "
                android:hint="Parcel pickup address"
                android:textSize="13.7sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="100"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:text="Drop location :"
                android:textSize="15.5sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>
            <TextView
                android:id="@+id/droplocation"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:text=""
                android:hint=""
                android:textSize="13.7sp"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

        </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:weightSum="100"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:text="Parcel Weight:"
                  android:textSize="15.5sp"
                  android:fontFamily="@font/roboto_medium"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

              <TextView
                  android:id="@+id/productweight"
                  android:layout_width="0dp"
                  android:inputType="textMultiLine"
                  android:textSize="13.7sp"
                  android:text=""
                  android:hint="product weight"
                  android:fontFamily="@font/roboto_regular"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:weightSum="100"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:text="Distance :"
                  android:textSize="15.5sp"
                  android:fontFamily="@font/roboto_medium"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>
              <TextView
                  android:id="@+id/totaldistance"
                  android:layout_width="0dp"
                  android:inputType="textMultiLine"
                  android:textSize="13.7sp"
                  android:text=""
                  android:hint="Total distance"
                  android:fontFamily="@font/roboto_regular"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

          </LinearLayout>

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:weightSum="100"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:text="Pickup Charge:"
                  android:textSize="15.5sp"
                  android:fontFamily="@font/roboto_medium"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

              <TextView
                  android:id="@+id/pickupcharge"
                  android:layout_width="0dp"
                  android:inputType="textMultiLine"
                  android:textSize="13.7sp"
                  android:text=""
                  android:hint="Pickup charge"
                  android:fontFamily="@font/roboto_regular"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

          </LinearLayout>



          <!--<LinearLayout
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:weightSum="100"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:text="Parcel Size :"
                  android:textSize="15.5sp"
                  android:fontFamily="@font/roboto_medium"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

              <TextView
                  android:id="@+id/productsize"
                  android:layout_width="0dp"
                  android:inputType="textMultiLine"
                  android:textSize="13.7sp"
                  android:text=""
                  android:hint="Not selected"
                  android:fontFamily="@font/roboto_regular"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

          </LinearLayout>
-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="100"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:text="Courier Charge :"
                android:textSize="15.5sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

            <TextView
                android:id="@+id/productcharge"
                android:layout_width="0dp"
                android:inputType="textMultiLine"
                android:textSize="13.7sp"
                android:text=""
                android:hint="product Charge per km"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

        </LinearLayout>

          <LinearLayout
              android:id="@+id/disc"
              android:layout_width="match_parent"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"
              android:weightSum="100"
              android:visibility="gone"
              android:layout_marginTop="12dp"
              android:orientation="horizontal"
              android:layout_height="wrap_content">

              <TextView
                  android:layout_width="0dp"
                  android:text="Discount :"
                  android:textSize="15.5sp"
                  android:fontFamily="@font/roboto_medium"
                  android:textColor="@color/txt_color"
                  android:layout_height="wrap_content"
                  android:layout_weight="50"/>

              <TextView
                  android:id="@+id/productdiscount"
                  android:layout_width="0dp"
                  android:inputType="textMultiLine"
                  android:textSize="13.7sp"
                  android:text=""
                  android:hint="Not applied"
                  android:fontFamily="@font/roboto_regular"
                  android:textColor="@android:color/holo_red_dark"
                  android:layout_height="wrap_content"
                  android:layout_weight="40"/>

              <ImageView
                  android:id="@+id/removecoupon"
                  android:layout_width="0dp"
                  android:layout_weight="10"
                  android:src="@drawable/ic_close_24dp"
                  android:layout_height="20dp" />


          </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:weightSum="100"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:text="Total Fare :"
                android:textSize="15.5sp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/txt_color"
                android:layout_height="wrap_content"
                android:layout_weight="50"/>

            <TextView
                android:id="@+id/totalestimate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="50"
                android:fontFamily="@font/roboto_regular"
                android:inputType="textMultiLine"
                android:text=""
                android:hint="Total price"
                android:textColor="@color/txt_color"
                android:textSize="13.7sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/view_line"/>

          <androidx.cardview.widget.CardView
              android:id="@+id/CardViewOffer"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:layout_marginBottom="10dp"
              app:cardBackgroundColor="@color/white">
              <LinearLayout
                  android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@drawable/dotted_rect"
                  android:layout_height="wrap_content">


              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_margin="16.7dp"
                  android:background="@drawable/edit_address_rect"
                  android:orientation="horizontal">


                  <ImageView
                      android:layout_width="24dp"
                      android:layout_height="24dp"
                      android:src="@drawable/ic_offers2"/>

                  <TextView
                      android:layout_weight="1"
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:textSize="15sp"
                      android:layout_gravity="center"
                      android:layout_marginLeft="11.7dp"
                      android:text="Apply Coupon"
                      android:textColor="@color/walkthrough_txt"
                      android:fontFamily="@font/roboto_regular"/>

                  <ImageView
                      android:layout_width="12dp"
                      android:layout_height="12dp"
                      android:layout_gravity="center"
                      android:src="@drawable/ic_right_arrow3"
                      android:tint="#FF5722"/>

              </LinearLayout>
              </LinearLayout>
          </androidx.cardview.widget.CardView>

          <View
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:layout_marginTop="8dp"
              android:background="@color/view_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="2dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17.6sp"
                    android:layout_marginTop="5dp"
                    android:text="Select Payment Mode"
                    android:textColor="@color/walkthrough_txt"
                    android:layout_marginLeft="12.7dp"
                    android:fontFamily="@font/roboto_medium"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                app:cardElevation="1dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/cash2"
                        android:layout_marginBottom="10dp"/>

                    <RadioButton
                        android:id="@+id/cash"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/toolbartxtcolor"
                        android:text="Cash Payment"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardElevation="1dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content">

               <!-- <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_line"/>-->

                <LinearLayout
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="16.7dp"
                        android:layout_marginTop="15dp"
                        android:src="@drawable/san"
                        android:layout_marginBottom="10dp"/>

                    <RadioButton
                        android:id="@+id/online"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:buttonTint="@color/toolbartxtcolor"
                        android:text="Online Payment"
                        />

                </LinearLayout>


            </androidx.cardview.widget.CardView>



        </LinearLayout>



        </LinearLayout>

    </ScrollView>


    </LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/above"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/bottom_linear"
            android:orientation="vertical"
            android:background="@color/view_line"/>



        <LinearLayout
            android:id="@+id/bottom_linear"
            android:layout_width="match_parent"
            android:weightSum="2"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/buttonback"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.7dp"
                android:background="@drawable/gradient_btn"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="8.7dp"
                android:layout_marginBottom="11.7dp"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="18.3sp" />

            <Button
                android:id="@+id/buttonbook"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11.7dp"
                android:background="@drawable/gradient_btn"
                android:layout_marginRight="11.7dp"
                android:layout_marginTop="8.7dp"
                android:layout_marginBottom="11.7dp"
                android:text="Book Now"
                android:textColor="#FFFFFF"
                android:textAllCaps="false"
                android:textSize="18.3sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



</RelativeLayout>