<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        android:layout_height="60dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:background="@color/white">

            <TextView
                android:layout_width="match_parent"
                android:text="Contact us"
                android:gravity="center"
                android:textSize="18.8sp"
                android:textColor="@color/toolbartxtcolor"
                android:layout_height="match_parent" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile number"
                android:textColor="@color/toolbartxtcolor"
                android:textSize="14.7sp" />

            <TextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="+919262831189"
                android:padding="12dp"
                android:textColor="@color/green"
                android:background="@drawable/gray_rect"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.8dp"
                android:text="Email"
                android:textColor="@color/toolbartxtcolor"
                android:textSize="14.7sp" />

            <TextView
                android:id="@+id/emailid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:inputType="text"
                android:textColor="@color/green"
                android:text=" info@quickparcels.in"
                android:padding="12dp"
                android:background="@drawable/gray_rect"
                android:textColorHint="#6C6D79"
                android:textSize="20sp" />

        </LinearLayout>



        <Button
            android:id="@+id/buttonOk"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/gradient_btn"
            android:text="Ok"
            android:textSize="16sp"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>