<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".OrderSuccess">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tool"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <include layout="@layout/toolbar_ordersuccess"
            android:id="@+id/title"/>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tool"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#f4f4f4"
                android:paddingTop="12.7dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="47.7dp"
                        android:layout_height="47.7dp"
                        android:layout_marginTop="16.7dp"
                        android:background="@drawable/ic_oval_gray"
                        android:gravity="center"
                        android:layout_gravity="center">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="15dp"
                            android:src="@drawable/ic_correct"
                            android:layout_gravity="center"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="@color/green"
                        android:layout_marginTop="11.7dp"
                        android:text="Booking Successful"
                        android:gravity="center"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="11.7sp"
                            android:textColor="@color/walkthrough_txt"
                            android:layout_marginTop="3dp"
                            android:text="Booking ID "
                            android:gravity="center"/>
                        <TextView
                            android:id="@+id/bookingid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13.7sp"
                            android:textColor="@color/walkthrough_txt"
                            android:layout_marginTop="3dp"
                            android:paddingLeft="5dp"
                            android:text=""
                            android:gravity="center"/>


                    </LinearLayout>



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="16.7dp"
                        android:background="#efefef"/>


                    <!--<android.support.v7.widget.CardView
                        android:id="@+id/CardReview"
                        android:layout_marginTop="10dp"
