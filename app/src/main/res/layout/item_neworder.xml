<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f5f7f8"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card"
        app:cardCornerRadius="2dp"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8.3dp"
        android:elevation="15dp"
        android:layout_marginRight="8.3dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_margin="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="100"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:layout_weight="45"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/bookingid"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:textSize="16.6sp"
                        android:textColor="@color/green"
                        android:text=""/>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="55"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/date"
                        android:paddingLeft="2dp"
                        android:layout_toLeftOf="@id/im"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:textSize="15.7sp"
                        android:textColor="@color/inactive"
                        android:fontFamily="@font/roboto_regular"
                        android:text=" "
                        />

                    <ImageView
                        android:id="@+id/im"
                        android:layout_width="15dp"
                        android:layout_height="18dp"
                        android:paddingTop="5dp"
                        android:layout_toLeftOf="@+id/time"
                        android:layout_marginRight="3dp"
                        android:src="@drawable/ic_access_time_black_24dp"
                        />

                    <TextView
                        android:id="@+id/time"
                        android:layout_alignParentEnd="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/inactive"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_marginRight="5dp"
                        android:textSize="15.7sp"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_height="70dp">
                <!--
                            <ImageView
                                android:layout_width="0dp"
                                android:padding="15dp"
                                android:src="@drawable/saaa"
                                android:layout_weight="20"
                                android:layout_height="match_parent" />-->

                <!-- <View
                     android:layout_width="0dp"
                     android:background="@color/view_line"
                     android:layout_height="match_parent"
                     android:layout_weight=".2"/>
     -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15.5sp"
                        android:text="Pick Up Location :"
                        android:textColor="@color/green"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/pickuplocation"
                        android:textSize="13.5sp"
                        android:text=""
                        android:paddingLeft="5dp"
                        android:maxLines="3"
                        android:lines="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:paddingLeft="10dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">

                    <TextView
                        android:textSize="15.5sp"
                        android:text="Drop Location :"
                        android:textColor="@color/green"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                    <TextView
                        android:id="@+id/droplocation"
                        android:textSize="13.5sp"
                        android:paddingLeft="5dp"
                        android:text=""
                        android:maxLines="3"
                        android:lines="3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />



                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:background="@color/view_line"
                    android:layout_height="match_parent"
                    android:layout_weight=".2"/>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/view_line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="100"
                android:orientation="horizontal"
                android:layout_height="25dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="45"
                    android:paddingTop="3dp"
                    android:paddingLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <TextView
                        android:textColor="@color/toolbartxtcolor"
                        android:textSize="14.4sp"
                        android:text="Weight:  "
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/weight"
                        android:textColor="@color/inactive"
                        android:fontFamily="@font/roboto_regular"
                        android:textSize="14.4sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="10"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <!--<ImageView
                        android:id="@+id/home"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_homes_24dp"
                        android:layout_height="match_parent" />

                    <ImageView
                        android:id="@+id/office"
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_business_24dp"
                        android:layout_height="match_parent" />-->


                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight="45"
                    android:paddingTop="3dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/img"
                        android:paddingRight="5dp"
                        android:layout_toLeftOf="@id/distance"
                        android:layout_width="25dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_location_24dp"
                        android:layout_height="match_parent" />

                    <TextView
                        android:id="@+id/distance"
                        android:textSize="14sp"
                        android:textColor="@color/inactive"
                        android:fontFamily="@font/roboto_regular"
                        android:layout_alignParentEnd="true"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true" />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>