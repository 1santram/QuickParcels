<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".DropLocation">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_above="@+id/l1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tool"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <include layout="@layout/toolbar_drop"
                android:id="@+id/title"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Address"
            android:paddingLeft="16.3dp"
            android:paddingTop="12.7dp"
            android:paddingBottom="12.7dp"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/walkthrough_txt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_line"/>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">



                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerview"
                    android:layout_height="wrap_content">


                </androidx.recyclerview.widget.RecyclerView>

                <TextView
                    android:id="@+id/AddAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:textSize="15sp"
                    android:layout_margin="16.7dp"
                    android:text="Add New Address"
                    android:fontFamily="@font/roboto_light"
                    android:background="@drawable/dotted_rect"
                    android:padding="13dp"
                    android:gravity="center"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>


    <LinearLayout
        android:layout_above="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:id="@+id/l1"
        android:orientation="vertical"
        />

    <LinearLayout
        android:id="@+id/bottom_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/btnnext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_btn"
            android:text="Continue with this Address"
            android:textSize="18.3sp"
            android:layout_margin="11.7dp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>

